<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_oauth_config_form" model="ir.ui.view">
        <field name="name">oauth.config.form</field>
        <field name="model">oauth.config</field>
        <field name="arch" type="xml">
            <form string="OAuth Configuration">
                <sheet>
                    <group>
                        <field name="access_token_expiry_minutes"/>
                        <field name="refresh_token_expiry_days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_oauth_config" model="ir.actions.act_window">
        <field name="name">OAuth Configuration</field>
        <field name="res_model">oauth.config</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo> 